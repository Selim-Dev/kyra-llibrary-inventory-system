# Development Dockerfile
FROM node:20-alpine

WORKDIR /app

# Install OpenSSL for Prisma
RUN apk add --no-cache openssl

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install all dependencies (including devDependencies)
RUN npm ci

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

# Set environment
ENV NODE_ENV=development

# Expose port
EXPOSE 3000

# Run migrations, seed, and start dev server with hot reload
CMD ["sh", "-c", "npx prisma migrate deploy && npx ts-node src/prisma/seed.ts && npm run dev"]
